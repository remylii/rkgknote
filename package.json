{
  "name": "rkgknote",
  "author": "remyli <rapi.remyli@gmail.com>",
  "license": "MIT",
  "version": "1.0.0",
  "description": "ver January 2017",
  "keywords": [
    "javascript", "css"
  ],
  "scripts": {
    "start": "yarn run watch:css & yarn run watch:js & yarn run server",
    "start:local": "yarn run watch:css & yarn run watch:js & yarn run server:browsersync",
    "server": "http-server public -p 3207 -c-1",
    "server:production": "http-server dist -p 3207 -c-1",
    "server:browsersync": "browser-sync start --server public --files public --no-open --port 3207",
    "compress:css": "csswring public/bundle.css > dist/bundle.css",
    "compress:js": "uglifyjs public/bundle.js > dist/bundle.js",
    "compress:html": "html-minifier -c .htmlminifierrc --file-ext html --input-dir public --output-dir dist",
    "build:production": "yarn run compress:html & yarn run build:css & yarn run build:js && yarn run compress:css && yarn run compress:js",
    "build:js": "webpack",
    "build:css": "postcss -c .postcssrc.json",
    "watch:js": "webpack -w",
    "watch:css": "postcss -w -c .postcssrc.json",
    "typecheck": "flow",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "test": "NODE_ENV=test ava",
    "cover": "nyc --reporter=lcov --reporter=text yarn test"
  },
  "dependencies": {
    "autoprefixer": "^6.6.1",
    "ava": "^0.17.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "csswring": "^5.1.1",
    "eslint": "^3.13.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.9.0",
    "flow-bin": "^0.37.4",
    "html-minifier": "^3.2.3",
    "http-server": "^0.9.0",
    "nyc": "^10.0.0",
    "postcss": "^5.2.8",
    "postcss-apply": "^0.4.0",
    "postcss-cli": "^2.6.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-flexbugs-fixes": "^2.1.0",
    "postcss-import": "^9.0.0",
    "postcss-nesting": "^2.3.1",
    "postcss-sorting": "^1.7.0",
    "uglify-js": "^2.7.5",
    "webpack": "^1.14.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "devDependencies": {
    "browser-sync": "^2.18.6"
  }
}

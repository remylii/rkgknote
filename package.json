{
  "name": "rkgknote",
  "author": "remyli",
  "license": "MIT",
  "version": "1.0.0",
  "description": "ver January 2017",
  "keywords": [
    "javascript",
    "css"
  ],
  "scripts": {
    "start": "yarn run watch & yarn run server",
    "start:local": "yarn run watch & yarn run server:browsersync",
    "server": "http-server public -p 3207 -c-1",
    "server:production": "http-server dist -p 3207 -c-1",
    "server:browsersync": "browser-sync start --server public --files public --no-open --port 3207",
    "compress:css": "csswring public/bundle.css > dist/bundle.css",
    "compress:js": "uglifyjs public/bundle.js > dist/bundle.js",
    "compress:html": "html-minifier -c .htmlminifierrc --file-ext html --input-dir public --output-dir dist",
    "build:production": "NODE_ENV=production yarn run compress:html & webpack && yarn run compress:css && yarn run compress:js",
    "watch": "webpack -w",
    "typecheck": "flow check",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "test": "NODE_ENV=test ava",
    "cover": "nyc --reporter=lcov --reporter=text yarn test",
    "watch:js": "webpack -w",
    "build:css": "postcss -c postcss.config.js -o public/bundle.css styles/main.css",
    "watch:css": "postcss -w"
  },
  "dependencies": {
    "autoprefixer": "^6.6.1",
    "ava": "^0.18.1",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.22.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-remove-console": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "css-loader": "^0.27.3",
    "csswring": "^5.1.1",
    "eslint": "^3.13.0",
    "eslint-plugin-flowtype": "^2.30.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "flow-bin": "^0.38.0",
    "flowtype": "^2.0.0",
    "html-minifier": "^3.2.3",
    "http-server": "^0.9.0",
    "istanbul": "^0.4.5",
    "nyc": "^10.1.2",
    "postcss": "^5.2.16",
    "postcss-cli": "^3.0.0",
    "postcss-loader": "^1.3.3",
    "postcss-reporter": "^3.0.0",
    "postcss-smart-import": "^0.6.10",
    "sanitize.css": "^5.0.0",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "uglify-js": "^2.7.5",
    "webpack": "^2.2.1"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "devDependencies": {
    "browser-sync": "^2.18.7"
  },
  "browserslist": [
    "ie >= 11",
    "last 2 Edge versions",
    "last 2 Firefox versions",
    "last 2 Chrome versions",
    "last 2 Safari versions",
    "last 2 Opera versions",
    "last 2 iOS versions",
    "last 2 ChromeAndroid versions"
  ]
}

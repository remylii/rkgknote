{
  "name": "rkgknote",
  "author": "remyli <rapi.remyli@gmail.com>",
  "license": "MIT",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "yarn run watch:css & yarn run watch:js & yarn run server",
    "start:local": "yarn run watch:css & yarn run watch:js & yarn run server:browsersync",
    "server": "http-server public -p 3207 -c-1",
    "server:browsersync": "browser-sync start --server public --files public --no-open",
    "compress:css": "csswring public/bundle.css > public/bundle.min.css",
    "compress:js": "uglifyjs public/bundle.js > public/bundle.min.js",
    "build:js": "webpack",
    "build:js:production": "yarn run compress:js && mv public/bundle.min.js public/bundle.js",
    "build:css": "postcss -c .postcssrc.json",
    "build:css:production": "yarn run compress:css && mv public/bundle.min.css public/bundle.css",
    "watch:js": "webpack -w",
    "watch:css": "postcss -w -c .postcssrc.json",
    "test": "NODE_ENV=test ava"
  },
  "dependencies": {
    "autoprefixer": "^6.6.1",
    "ava": "^0.17.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "csswring": "^5.1.1",
    "http-server": "^0.9.0",
    "postcss": "^5.2.8",
    "postcss-apply": "^0.4.0",
    "postcss-cli": "^2.6.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-flexbugs-fixes": "^2.1.0",
    "postcss-import": "^9.0.0",
    "postcss-nesting": "^2.3.1",
    "postcss-sorting": "^1.7.0",
    "uglifyjs": "^2.4.10",
    "webpack": "^1.14.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "devDependencies": {
    "browser-sync": "^2.18.6"
  }
}
